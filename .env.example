# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=

# File Upload Constraints
# MAX_FILE_SIZE in bytes (default: 5242880 = 5MB)
MAX_FILE_SIZE=5242880
# Maximum number of file uploads per day per user
MAX_UPLOADS_PER_DAY=5
# File time-to-live in hours (default: 24)
FILE_TTL_HOURS=24

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# Set to True to run tasks synchronously (no Redis/worker needed for development)
CELERY_TASK_ALWAYS_EAGER=True
CELERY_TASK_EAGER_PROPAGATES=True

# CORS Settings
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
